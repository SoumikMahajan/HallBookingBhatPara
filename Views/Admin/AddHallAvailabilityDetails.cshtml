<div class="main-container">
    <!-- Left Side - Entry Section -->
    <div class="entry-section">
        <h2 class="section-title">*** Hall Availability Entry ***</h2>

        <form id="addHallAvailabilityForm">
            <div class="mb-3">
                <label for="notificationStatus" class="form-label">Hall Category</label>
                <select id="notificationStatus" class="form-select" required>
                    <option value="">Select Category</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="notificationStatus" class="form-label">Hall Name</label>
                <select id="notificationStatus" class="form-select" required>
                    <option value="">Select Hall</option>
                </select>
            </div>

            @* <div class="mb-3">
                @Html.AntiForgeryToken()
                <label for="hallName" class="form-label">Hall Name</label>
                <input type="text" id="hallName" class="form-control" placeholder="Enter Hall Name" required>
            </div> *@

            <div class="mb-3">
                <label for="availableFrom" class="form-label">
                    <i class="fas fa-calendar-alt me-1"></i>Available From
                </label>
                <input type="date" id="availableFrom" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="availableTo" class="form-label">
                    <i class="fas fa-calendar-check me-1"></i>Available To
                </label>
                <input type="date" id="availableTo" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="proposedRate" class="form-label">
                    <i class="fas fa-rupee-sign me-1"></i>Proposed Rate (per night)
                </label>
                <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input type="number" id="proposedRate" class="form-control" placeholder="Enter rate" min="0" required>
                </div>
            </div>

            <div class="mb-3">
                <label for="securityMoney" class="form-label">
                    <i class="fas fa-shield-alt me-1"></i>Security Money
                </label>
                <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input type="number" id="securityMoney" class="form-control" placeholder="Enter security amount" min="0" required>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i><span id="submitText">Submit</span>
            </button>
        </form>
    </div>

    <!-- Right Side - List Section -->
    <div class="list-section">
        <h2 class="section-title">*** All Hall Availability Details ***</h2>

        <div class="table-responsive">
            <table class="HallAvailabilityTable">
                <thead>
                    <tr>
                        <th>NO.</th>
                        <th>Hall Category</th>
                        <th>Hall Name</th>
                        <th>Available From</th>
                        <th>Available To</th>
                        <th>Proposed Rate</th>
                        <th>Security Money</th>
                    </tr>
                </thead>
                <tbody id="HallAvailabilityTableBody">
                    <tr>
                        @* <td colspan="3" class="text-center text-muted">No Category found.</td> *@
                        <td>1</td>
                        <td>Hall Name</td>
                        <td>Category</td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
