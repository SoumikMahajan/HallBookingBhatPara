@model HallBookingBhatPara.Domain.DTO.MultipleModel

<div>
    @Html.AntiForgeryToken()
    <input type="hidden" id="editHallAvailId" value="@Model.hallAvailable.hall_availability_id_pk">

    <div class="row mb-3">
        <div class="col-md-4">
            <label for="hallAvailCategorylist" class="form-label">Hall Category</label>
            <select id="hallAvailCategorylist" class="form-select">
                <!option value="0">--Select Category--</!option>
                @foreach (var item in Model.dropDownListDTOs)
                {
                    <!option value="@item.Id" @(Model.hallAvailable.category_id_pk.ToString() == item.Id.ToString() ? "selected" : "")>
                        @item.Name
                    </!option>
                }
            </select>
        </div>

        <div class="col-md-4">
            <label for="hallAvailSubCategorylist" class="form-label">Hall Name</label>
            <select id="hallAvailSubCategorylist" class="form-select">
                <!option value="0">-- Select Subcategory --</!option>
                @foreach (var item in Model.SubCategoryList)
                {
                    <!option value="@item.Id" @(Model.hallAvailable.hall_id_pk.ToString() == item.Id.ToString() ? "selected" : "")>
                        @item.Name
                    </!option>
                }
            </select>
        </div>
        @if (Model.hallAvailable.floor_id_fk == 0)
        {
            <div class="col-md-4 d-none" id="IsHasFloorForUpdate">
                <label for="UphallFloorlist" class="form-label">Floor Name</label>
                <select id="UphallFloorlist" class="form-select">
                    <!option value="0">-- Select Floor --</!option>
                    @* @foreach (var item in Model.dropDownListDTOs)
                    {
                        <!option value="@item.Id" @(Model.hallAvailable.category_id_pk.ToString() == item.Id.ToString() ? "selected" : "")>
                        @item.Name
                        </!option>
                    } *@
                </select>
            </div>
        }
        else
        {
            <div class="col-md-4" id="IsHasFloorForUpdate">
                <label for="UphallFloorlist" class="form-label">Floor Name</label>
                <select id="UphallFloorlist" class="form-select">
                    <!option value="0">-- Select Floor --</!option>
                    @foreach (var item in Model.FloorList)
                    {
                        <!option value="@item.Id" @(Model.hallAvailable.floor_id_fk.ToString() == item.Id.ToString() ? "selected" : "")>
                        @item.Name
                        </!option>
                    }
                </select>
            </div>
        }

    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label for="UpAvailableFrom" class="form-label">
                <i class="fas fa-calendar-alt me-1"></i>Available From
            </label>
            <input type="date" id="UpAvailableFrom" class="form-control" 
                   value="@Model.hallAvailable.hall_availability_from_date.ToString("yyyy-MM-dd")" disabled>
        </div>

        <div class="col-md-6">
            <label for="UpAvailableTo" class="form-label">
                <i class="fas fa-calendar-check me-1"></i>Available To
            </label>
            <input type="date" id="UpAvailableTo" class="form-control" 
                   value="@Model.hallAvailable.hall_availability_to_date.ToString("yyyy-MM-dd")" disabled>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-4">
            <label for="UpProposedRate" class="form-label">
                <i class="fas fa-rupee-sign me-1"></i>Rate
            </label>
            <div class="input-group">
                <span class="input-group-text">₹</span>
                <input type="number" id="UpProposedRate" class="form-control" placeholder="Enter rate" min="0"
                       value="@Model.hallAvailable.rate">
            </div>
        </div>

        <div class="col-md-4">
            <label for="UpPaymentType" class="form-label">Payment Type</label>
            <select id="UpPaymentType" class="form-select">
                <!option value="0" @(Model.hallAvailable.payment_type_id_fk == 0 ? "selected" : "")>--Select Payment Type--</!option>
                <!option value="1" @(Model.hallAvailable.payment_type_id_fk == 1 ? "selected" : "")>Full Payment</!option>
                <!option value="2" @(Model.hallAvailable.payment_type_id_fk == 2 ? "selected" : "")>Half Payment</!option>
            </select>
        </div>

        <div class="col-md-4 @(Model.hallAvailable.payment_type_id_fk == 0 ? "d-none" : "")" id="UpIsHasSecurityMoney">
            <label for="UpSecurityMoney" class="form-label">
                <i class="fas fa-shield-alt me-1"></i>Security Money
            </label>
            <div class="input-group">
                <span class="input-group-text">₹</span>
                <input type="number" id="UpSecurityMoney" class="form-control"
                       placeholder="Enter security amount" min="0"
                       value="@(Model.hallAvailable.security_money == 0 ? "" : Model.hallAvailable.security_money.ToString())">

            </div>
        </div>
    </div>
</div>
