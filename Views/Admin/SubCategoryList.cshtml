@{
    ViewData["Title"] = "SubCategory";
}

@model HallBookingBhatPara.Domain.DTO.MultipleModel

<div class="main-container">
    <!-- Left Side - Entry Section -->
    <div class="entry-section">
        <h2 class="section-title">*** Hall Details Entry ***</h2>

        <form id="addSubCategoryForm">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="categorylist" class="form-label">Category</label>
                <select id="categorylist" class="form-select">
                    <option value="0" selected>--Select Category--</option>
                    @foreach (var item in Model.dropDownListDTOs)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="hallName" class="form-label">Hall Name</label>
                <input type="text" id="hallName" class="form-control" placeholder="Enter Hall Name">
            </div>

            <div class="file-upload-section">
                <label class="form-label">Upload Hall Image</label>
                <div class="file-input-wrapper">
                    <input type="file" id="fileUpload" class="d-none" accept=".jpg,.png">
                    <div class="file-input" onclick="document.getElementById('fileUpload').click()">
                        <i class="fas fa-cloud-upload-alt me-2"></i>
                        <span id="fileText">Browse... No file selected.</span>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i><span id="submitText">Submit</span>
            </button>
        </form>
    </div>

    <!-- Right Side - List Section -->
    <div class="list-section">
        <h2 class="section-title">*** All Categories ***</h2>

        <div class="table-responsive">
            <table class="SubcategoryTable">
                <thead>
                    <tr>
                        <th>NO.</th>
                        <th>Hall Name</th>
                        <th>Category Name</th>
                        <th>Image</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody id="SubcategoryTableBody">
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Category Edit Modal -->
<div class="modal fade" id="editSubCategoryModal" tabindex="-1" aria-labelledby="editSubCategoryModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content entry-section">
            <div class="modal-header">
                <h5 class="modal-title section-title" id="editSubCategoryModalLabel">*** Edit Sub Category ***</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editSubCategoryForm">
                <div class="modal-body" id="parialSubCatEditModal">                    
                    
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i><span id="updateSubCatText">Update</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

