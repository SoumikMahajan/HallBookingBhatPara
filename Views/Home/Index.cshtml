    <!-- Quick Actions Section -->
    <section class="quick-actions">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center mb-5">
                    <h3 class="section-title">Quick Actions</h3>
                    <p class="section-subtitle">Access our services with just a few clicks</p>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <div class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-calendar-plus" aria-hidden="true"></i><span class="fallback-icon">📅</span>
                        </div>
                        <h4 class="action-title">Book a Hall</h4>
                        <p class="action-description">Reserve marriage halls, seminar halls, and community centers for your events.</p>
                        <button class="action-btn" onclick="navigateToBooking()">Book Now</button>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-list-alt" aria-hidden="true"></i><span class="fallback-icon">📋</span>
                        </div>
                        <h4 class="action-title">View Bookings</h4>
                        <p class="action-description">Check your current bookings, payment status, and booking history.</p>
                        <button class="action-btn" onclick="navigateToBookings()">View Bookings</button>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="action-card">
                        <div class="action-icon">
                            <i class="fas fa-download" aria-hidden="true"></i><span class="fallback-icon">📥</span>
                        </div>
                        <h4 class="action-title">Download Forms</h4>
                        <p class="action-description">Access application forms, guidelines, and necessary documents.</p>
                        <button class="action-btn" onclick="navigateToForms()">Download</button>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>





