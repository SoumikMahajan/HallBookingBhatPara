@{
    ViewData["Title"] = "AddHallMaster";
}

@model HallBookingBhatPara.Domain.DTO.MultipleModel

<div class="main-container" style="grid-template-columns: 0.8fr 2fr !important">
    <!-- Left Side - Entry Section -->
    <div class="entry-section">
        <h2 class="section-title">*** Hall Availability Entry ***</h2>

        <form id="addHallAvailabilityForm">

            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="hallCategorylist" class="form-label">Hall Category</label>
                <select id="hallCategorylist" class="form-select">
                    <option value="0" selected>--Select Category--</option>
                    @foreach (var item in Model.dropDownListDTOs)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="hallSubCategorylist" class="form-label">Hall Name</label>
                <select id="hallSubCategorylist" class="form-select">                    
                </select>
            </div>      
            
            <div class="mb-3 d-none" id="IsHasFloor">
                <label for="hallFloorlist" class="form-label">Floor</label>
                <select id="hallFloorlist" class="form-select">
                </select>
            </div>
            <div class="mb-3" id="">
                <label for="paymentType" class="form-label">Payment Type</label>
                <select id="paymentType" class="form-select">
                    <!option value="0" selected>--Select Payment Type--</!option>                    
                    <!option value="1">Full Payment</!option>
                    <!option value="2">Half Payment</!option>
                </select>
            </div>

            <div class="mb-3">
                <label for="availableFrom" class="form-label">
                    <i class="fas fa-calendar-alt me-1"></i>Available From
                </label>
                <input type="date" id="availableFrom" class="form-control">
            </div>

            <div class="mb-3">
                <label for="availableTo" class="form-label">
                    <i class="fas fa-calendar-check me-1"></i>Available To
                </label>
                <input type="date" id="availableTo" class="form-control">
            </div>

            <div class="mb-3">
                <label for="proposedRate" class="form-label">
                    <i class="fas fa-rupee-sign me-1"></i>Proposed Rate (per night)
                </label>
                <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input type="number" id="proposedRate" class="form-control" placeholder="Enter rate" min="0">
                </div>
            </div>

            <div class="mb-3 d-none" id="IsHasSecurityMoney">
                <label for="securityMoney" class="form-label">
                    <i class="fas fa-shield-alt me-1"></i>Security Money
                </label>
                <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input type="number" id="securityMoney" class="form-control" placeholder="Enter security amount" min="0">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i><span id="submitText">Submit</span>
            </button>
        </form>
    </div>

    <!-- Right Side - List Section -->
    <div class="list-section">
        <h2 class="section-title">*** All Hall Availability Details ***</h2>

        <div class="table-responsive">
            <table class="HallAvailabilityTable">
                <thead>
                    <tr>
                        <th>NO.</th>
                        <th>Category</th>
                        <th>Name</th>
                        <th>Available From</th>
                        <th>Available To</th>
                        <th>Proposed Rate</th>
                        <th>Security Money</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody id="HallAvailabilityTableBody">
                    
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Hall avail Edit Modal -->
<div class="modal fade" id="editHallAvailModal" tabindex="-1" aria-labelledby="editHallAvailLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content model-section">
            <div class="modal-header justify-content-center position-relative">
                <h5 class="modal-title text-center w-100 fw-bold section-title" id="editHallAvailLabel">*** Edit Hall Available ***</h5>
                <button type="button" class="btn-close position-absolute end-0 me-3" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="editHallAvailForm">
                <div class="modal-body" id="parialHallAvailEditModal">
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i><span id="updateHallAvailText">Update</span>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


