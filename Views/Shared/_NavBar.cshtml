@inject HallBookingBhatPara.Application.Interface.ITokenProvider _tokenProvider

@{
    var userClaims = _tokenProvider.GetUserClaims();
    var userName = userClaims?.Name ?? "Unknown User";
    var UserProfileImage = userClaims?.ProfileImagePath;
    var userInitials = userName.Split(' ').Take(2).Select(n => n.FirstOrDefault()).Aggregate("", (acc, c) => acc + c).ToUpper();
}

<!-- Top Bar -->
<div class="top-bar py-2 text-white d-none d-md-block" style="background: linear-gradient(135deg, #ff6b35, #ff914d); font-size: 0.9rem;">
    <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center gap-2">
        <div class="d-flex gap-3 align-items-center flex-wrap">
            <span><i class="fas fa-phone-alt me-1"></i> +91-33-2584-2345</span>
            <span><i class="fas fa-envelope me-1"></i> info@bhatparamunicipalitygov.co.in</span>
            <span><i class="fas fa-clock me-1"></i> 10:00 AM – 6:00 PM</span>
        </div>
        <div class="d-flex gap-2">
            <a href="#" class="text-white" title="Facebook"><i class="fab fa-facebook-f"></i></a>
            <a href="#" class="text-white" title="Twitter"><i class="fab fa-twitter"></i></a>
            <a href="#" class="text-white" title="YouTube"><i class="fab fa-youtube"></i></a>
            <a href="#" class="text-white" title="Instagram"><i class="fab fa-instagram"></i></a>
        </div>
    </div>
</div>

<!-- Main Header -->
<header class="main-header py-3 shadow-sm bg-white">
    <div class="container-fluid px-4">
        <div class="row align-items-center">
            <!-- Logo & Text -->
            <div class="col-lg-8 col-md-7 col-12 d-flex align-items-center flex-wrap gap-3">
                <img src="@Url.Content("~/assets/staticimages/bhat_logo_orginal.png")" href="@Url.Action("Index", "Home")" alt="Municipality Seal" style="height: 70px;" class="rounded-circle shadow-sm">
                <div>
                    <h1 class="h4 fw-bold text-primary mb-1" style="font-family: 'Poppins', sans-serif;">Bhatpara Municipality</h1>
                    <p class="text-muted small mb-0" style="font-family: 'Poppins', sans-serif;">Hall Booking System &nbsp;|&nbsp; Established 1899</p>
                </div>
            </div>            

            <!-- User Profile & Logout -->
            <div class="col-lg-4 col-md-5 col-12 mt-3 mt-md-0 text-end d-flex justify-content-md-end justify-content-between align-items-center">
                <!-- Profile Section -->
                <div class="profile-section d-flex align-items-center me-3">
                    <!-- Profile Image/Avatar -->
                    <div class="profile-avatar-container me-3 position-relative">
                        <div class="profile-avatar" data-bs-toggle="dropdown" aria-expanded="false">
                            @if (!string.IsNullOrEmpty(UserProfileImage))
                            {
                                 <img src="@Url.Content(UserProfileImage)" alt="Profile" class="profile-image">
                            }
                            else
                            {
                                <div class="profile-initials">@userInitials</div>
                            }
                        </div>
                        <div class="profile-status-indicator"></div>
                        <!-- Profile Dropdown Menu -->
                        <ul class="dropdown-menu dropdown-menu-end profile-dropdown shadow-lg">
                            <li class="dropdown-header">
                                <div class="d-flex align-items-center">
                                    <div class="profile-avatar-small me-2">
                                        @if (!string.IsNullOrEmpty(UserProfileImage))
                                        {
                                             <img src="@Url.Content(UserProfileImage)" alt="Profile" class="profile-image">
                                        }
                                        else
                                        {
                                            <div class="profile-initials-small">@userInitials</div>
                                        }
                                        
                                    </div>
                                    <div>
                                        <div class="fw-bold text-dark">@userName</div>
                                        <div class="small text-muted">Municipality User</div>
                                    </div>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            
                            <li>
                                <a class="dropdown-item profile-dropdown-item" asp-controller="User" asp-action="Profile">
                                    <i class="fas fa-user-circle me-2 text-primary"></i>
                                    Profile Settings
                                </a>
                            </li>
                            
                            <li>
                                <a class="dropdown-item profile-dropdown-item" asp-controller="Booking" asp-action="MyBookings">
                                    <i class="fas fa-calendar-check me-2 text-success"></i>
                                    My Bookings
                                </a>
                            </li>
                            
                            <li>
                                <a class="dropdown-item profile-dropdown-item" asp-controller="Booking" asp-action="BookingHistory">
                                    <i class="fas fa-history me-2 text-info"></i>
                                    Booking History
                                </a>
                            </li>
                                                        
                            
                            <li>
                                <a class="dropdown-item profile-dropdown-item" asp-controller="User" asp-action="Documents">
                                    <i class="fas fa-file-alt me-2 text-secondary"></i>
                                    My Documents
                                </a>
                            </li>
                            
                            <li>
                                <a class="dropdown-item profile-dropdown-item" asp-controller="Payment" asp-action="PaymentHistory">
                                    <i class="fas fa-credit-card me-2 text-primary"></i>
                                    Payment History
                                </a>
                            </li>
                            
                            <li>
                                <a class="dropdown-item profile-dropdown-item" asp-controller="Support" asp-action="HelpCenter">
                                    <i class="fas fa-question-circle me-2 text-info"></i>
                                    Help & Support
                                </a>
                            </li>
                            
                            <li><hr class="dropdown-divider"></li>
                            
                            <li>
                                <a class="dropdown-item profile-dropdown-item" asp-controller="User" asp-action="Settings">
                                    <i class="fas fa-cog me-2 text-secondary"></i>
                                    Account Settings
                                </a>
                            </li>
                            
                            <li>
                                <a class="dropdown-item profile-dropdown-item text-danger" asp-action="Logout" asp-controller="User">
                                    <i class="fas fa-sign-out-alt me-2"></i>
                                    Logout
                                </a>
                            </li>
                        </ul>
                    </div>
                    
                    <!-- User Info -->
                    @* <div class="user-info text-start">
                        <div class="small text-muted mb-1">Welcome back,</div>
                        <div class="fw-semibold text-dark user-name" style="font-family: 'Poppins', sans-serif;">@userName</div>
                    </div> *@
                </div>
                
                <!-- Logout Button -->
                @* <a class="btn btn-outline-danger rounded-pill px-3 logout-btn" asp-action="Logout" asp-controller="User">
                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                </a> *@
                
                <!-- Flag Image: Hidden on screens <768px -->
                <img src="@Url.Content("~/assets/staticimages/flag.gif")" alt="India Flag" class="d-none d-md-block ms-3" style="height: 70px; width: auto;">
            </div>
        </div>
    </div>
</header>


