@{
    ViewData["Title"] = "Category";
}

<div class="main-container">
    <!-- Left Side - Entry Section -->
    <div class="entry-section">
        <h2 class="section-title">*** Category Entry ***</h2>

        <form id="addCategoryForm">
            <div class="mb-3">
                @Html.AntiForgeryToken()
                <label for="categoryName" class="form-label">Category Name</label>
                <input type="text" id="categoryName" class="form-control" placeholder="Enter Category Name">
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i><span id="submitText">Submit</span>
            </button>
        </form>
    </div>

    <!-- Right Side - List Section -->
    <div class="list-section">
        <h2 class="section-title">*** All Categories ***</h2>        

        <div class="table-responsive">
            <table class="categoryTable">
                <thead>
                    <tr>
                        <th>NO.</th>
                        <th>Category Name</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody id="categoryTableBody">
                    @* <tr>                       
                        <td>1</td>
                        <td>demo</td>
                        <td></td>
                    </tr> *@
                </tbody>
            </table>
        </div>
    </div>
</div>
