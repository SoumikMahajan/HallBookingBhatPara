@model HallBookingBhatPara.Domain.DTO.MultipleModel


@if (Model.hallSearchList.Count == 0 || Model.hallSearchList == null)
{
    <section class="results-section">
        <div class="container">
            <div class="col-12">
                <div class="no-results">
                    <i class="fas fa-search"></i>
                    <h3>No Halls Found</h3>
                    <p>Sorry, no halls are available for your selected criteria. Please try different dates or hall type.</p>
                </div>
            </div>
        </div>
    </section>   
    return;
}


<section class="results-section">
    <div class="container">
        <div class="section-header" id="resultsHeader">
            <h3><i class="fas fa-list"></i> Available Halls</h3>
            <p>Choose from our selection of premium venues for your event</p>
        </div>

        <div id="resultsContainer" class="results-grid">

            @foreach (var item in Model.hallSearchList)
            {
                DateTime fromDate = item.hall_availability_from_date;
                DateTime toDate = item.hall_availability_to_date;

                string GetOrdinal(DateTime d) =>
                $"{d.Day}{(d.Day is 1 or 21 or 31 ? "st" : d.Day is 2 or 22 ? "nd" : d.Day is 3 or 23 ? "rd" : "th")} {d:MMMM}, {d:yyyy}";

                <div class="hall-card">
                    <div class="hall-card-header">
                        <h4 class="hall-title">@item.category_name</h4>
                        <span class="hall-type">@item.hall_name</span>
                        @if (!string.IsNullOrEmpty(item.floor_name))
                        {
                            <span class="hall-floor">@item.floor_name</span>
                        }
                        
                    </div>
                    <div class="hall-card-body">
                        <div class="hall-info">
                            <div class="info-item">
                                <div class="info-icon"><i class="fas fa-map-marker-alt"></i></div>
                                <span>City: Bhatpara</span>
                            </div>
                            @* <div class="info-item">
                            <div class="info-icon"><i class="fas fa-users"></i></div>
                            <span>Capacity: 500 Guest</span>
                        </div> *@
                            @* <div class="info-item">
                            <div class="info-icon"><i class="fas fa-star"></i></div>
                            <span>Amenities: Air Condition,Parking</span>
                        </div> *@
                            <div class="info-item">
                                <div class="info-icon"><i class="fas fa-users"></i></div>
                                <span>Floor Type: @item.floor_name</span>
                            </div>
                            <div class="info-item">
                                <div class="info-icon"><i class="fas fa-users"></i></div>
                                <span>Security Monry: @item.security_money</span>
                            </div>
                            <div class="info-item">
                                <div class="info-icon"><i class="fas fa-calendar"></i></div>
                                <span>Available Date: @GetOrdinal(fromDate) to @GetOrdinal(toDate)</span>
                            </div>
                        </div>

                        <div class="price-section">
                            <div>
                                <div class="price">₹@item.rate</div>
                                <div class="price-label">per day</div>
                            </div>
                            <a asp-action="HallDetailsBooking" asp-controller="UserBooking" asp-route-hallAvlId="@item.hall_availability_id_pk" class="btn btn-primary book-btn">
                                <i class="fas fa-calendar-plus"></i> Book Now
                            </a>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>





