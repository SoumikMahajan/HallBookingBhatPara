@{
    ViewData["Title"] = "AddHallMaster";
}

@model HallBookingBhatPara.Domain.DTO.MultipleModel

<div class="main-container" style="grid-template-columns: 0.8fr 2fr !important">
    <!-- Left Side - Entry Section -->
    <div class="entry-section">
        <h2 class="section-title">*** Hall Availability Entry ***</h2>

        <form id="addHallAvailabilityForm">

            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="hallCategorylist" class="form-label">Hall Category</label>
                <select id="hallCategorylist" class="form-select">
                    <option value="0" selected>Select Category</option>
                    @foreach (var item in Model.dropDownListDTOs)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="mb-3">
                <label for="hallSubCategorylist" class="form-label">Hall Name</label>
                <select id="hallSubCategorylist" class="form-select">                    
                </select>
            </div>            

            <div class="mb-3">
                <label for="availableFrom" class="form-label">
                    <i class="fas fa-calendar-alt me-1"></i>Available From
                </label>
                <input type="date" id="availableFrom" class="form-control">
            </div>

            <div class="mb-3">
                <label for="availableTo" class="form-label">
                    <i class="fas fa-calendar-check me-1"></i>Available To
                </label>
                <input type="date" id="availableTo" class="form-control">
            </div>

            <div class="mb-3">
                <label for="proposedRate" class="form-label">
                    <i class="fas fa-rupee-sign me-1"></i>Proposed Rate (per night)
                </label>
                <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input type="number" id="proposedRate" class="form-control" placeholder="Enter rate" min="0">
                </div>
            </div>

            <div class="mb-3">
                <label for="securityMoney" class="form-label">
                    <i class="fas fa-shield-alt me-1"></i>Security Money
                </label>
                <div class="input-group">
                    <span class="input-group-text">₹</span>
                    <input type="number" id="securityMoney" class="form-control" placeholder="Enter security amount" min="0">
                </div>
            </div>

            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i><span id="submitText">Submit</span>
            </button>
        </form>
    </div>

    <!-- Right Side - List Section -->
    <div class="list-section">
        <h2 class="section-title">*** All Hall Availability Details ***</h2>

        <div class="table-responsive">
            <table class="HallAvailabilityTable">
                <thead>
                    <tr>
                        <th>NO.</th>
                        <th>Category</th>
                        <th>Name</th>
                        <th>Available From</th>
                        <th>Available To</th>
                        <th>Proposed Rate</th>
                        <th>Security Money</th>
                        <th>Edit</th>
                    </tr>
                </thead>
                <tbody id="HallAvailabilityTableBody">
                    
                </tbody>
            </table>
        </div>
    </div>
</div>


