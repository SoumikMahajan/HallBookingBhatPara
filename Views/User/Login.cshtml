@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "HallBooking";
}


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="login-container">
                <div class="login-card">
                    <div class="logo-section">
                        <div class="logo-icon">
                            <i class="fas fa-building"></i>
                        </div>
                        <h1 class="municipality-name">Bhatpara Municipality</h1>
                        <p class="subtitle">Hall Booking System</p>
                    </div>

                    <div class="alert alert-success" id="successAlert">
                        <i class="fas fa-check-circle me-2"></i>
                        <span id="successMessage"></span>
                    </div>

                    <div class="alert alert-danger" id="errorAlert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <span id="errorMessage"></span>
                    </div>

                    <form id="loginForm">
                        @Html.AntiForgeryToken()
                        <div class="form-floating">
                            <input type="email" class="form-control" id="floatingEmail" placeholder="name@example.com" required>
                            <label for="floatingEmail">
                                <i class="fas fa-envelope me-2"></i>Email Address
                            </label>
                        </div>

                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="fas fa-lock"></i>
                            </span>
                            <input type="password" class="form-control" id="passwordInput" placeholder="Enter your password" required>
                            <span class="input-group-text password-toggle togglePassword">
                                <i class="fas fa-eye"></i>
                            </span>
                        </div>

                        <div class="remember-forgot">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="rememberMe">
                                <label class="form-check-label" for="rememberMe">
                                    Remember me
                                </label>
                            </div>
                            <a href="#" class="forgot-link">Forgot Password?</a>
                        </div>

                        <button class="btn btn-login" type="submit">
                            <span class="login-text">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Sign In
                            </span>
                            <span class="loading">
                                <div class="spinner-border spinner-border-sm" role="status">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                Signing In...
                            </span>
                        </button>
                    </form>

                    <div class="divider">
                        <span>New to our platform?</span>
                    </div>

                    <div class="register-link">
                        <a href="@Url.Action("Registration", "User")">Create an Account</a>
                    </div>

                    <div class="footer-text">
                        <p>&copy; @DateTime.Now.Year Bhatpara Municipality. All rights reserved.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
