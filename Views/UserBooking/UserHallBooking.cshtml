@{
    ViewData["Title"] = "User Search";
}

<!-- Search Hero Section -->
<section class="search-hero">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h2><i class="fas fa-building"></i> Find Your Perfect Hall</h2>
                <p>Discover and book the ideal venue for your special events in Bhatpara Municipality</p>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="search-card">
                    <h3 class="search-title">
                        <i class="fas fa-search"></i> Search Available Halls
                    </h3>

                    <form id="searchForm">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select id="hallType" class="form-select">
                                        <option value="">Choose Hall Type</option>
                                        <option value="marriage">Marriage Hall</option>
                                        <option value="auditorium">Auditorium</option>
                                        <option value="seminar">Seminar Hall</option>
                                        <option value="community">Community Center</option>
                                    </select>
                                    @* <label for="hallType"><i class="fas fa-building"></i> Hall Type</label> *@
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input type="date" id="startDate" class="form-control">
                                    <label for="startDate"><i class="fas fa-calendar-alt"></i> Start Date</label>
                                </div>
                            </div>

                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input type="date" id="endDate" class="form-control">
                                    <label for="endDate"><i class="fas fa-calendar-check"></i> End Date</label>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12 text-center">
                                <button type="submit" class="search-btn">
                                    <i class="fas fa-search"></i> Search Available Halls
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Results Section -->
<section class="results-section">
    <div class="container">
        <div class="section-header" id="resultsHeader" style="display: none;">
            <h3><i class="fas fa-list"></i> Available Halls</h3>
            <p>Choose from our selection of premium venues for your event</p>
        </div>

        <div id="loadingSpinner" class="loading" style="display: none;">
            <div class="spinner"></div>
        </div>

        <div id="resultsContainer" class="results-grid"></div>
    </div>
</section>

